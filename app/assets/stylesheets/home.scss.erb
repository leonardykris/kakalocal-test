@media (max-width: 400px) {
  	#hero:before {
  	    background-position: -36px -120px !important;
  	    height: 90% !important;
  	    transform: scale(2,2);
  	}
}

html {
	-webkit-font-smoothing: antialiased;
	text-shadow: rgba(0,0,0,.01) 0 0 1px;
	background-color: #333;
	color: white;
}

#hero:before {
	background: url("<%= asset_path 'kaka_bg_2.jpg' %>") no-repeat center top;
    background-position: center bottom;
    background-size: cover;
    -webkit-filter: opacity(0.6);
    position: fixed;
    content: "";
    left: 0;
    right: 0;
    z-index: -1;
    display: block;
    height: 100%;
}

#hero {
	position: fixed;
	left: 0;
	right: 0;
	z-index: 0;
	color: #fff;

	h1 {
		font-size: 6em;
	}

	.intro-text {
		margin-top: 240px;
		text-transform: uppercase;
		font-weight: 700;
		color: #fff;
		font-family: 'Montserrat', sans-serif;
		text-align: center;
	}
}

input[type="text"] {
  	padding: 12px 18px;
  	// height: 60px;
  	width: 100%;
  	font-size: 1.5em;
  	appearance: none;
  	// box-shadow: none;
  	box-shadow: 0 2px 0 0 rgba(0,0,0,0.1);
  	border-radius: 4px;
	border: none;
  	// border-bottom: solid 2px #F57C00;
  	// transition: border 0.3s;
  	// text-align: center;
  	// color: white;
  	// background-color: #FF9100;
  	background-color: #fff;
  	color: rgba(0, 0, 0, 0.5);
}
input[type="text"]:focus {
  	outline: none;
}

#results {
	padding: 12px 18px;
	width: 100%;
	font-size: 1.5em;
	color: rgba(0, 0, 0, 0.5);
	border-radius: 4px;
	background-color: #fff;
	display: none;

	div {
		cursor: pointer;

		span {
			color: #EF746F;
		}
	}
	div:not(:last-child) {
		padding-bottom: 10px;
	}
	div:hover {
		background-color: #EEE;
	}
}

